{
  "name": "laminotes-angular",
  "version": "0.0.0",
  "main": "electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build": "ng build --base-href ./",
    "server": "node server.js",
    "dev": "concurrently \"ng serve --proxy-config proxy.conf.json\" \"node server.js\"",
    "electron:dev": "ng build && NODE_ENV=development electron .",
    "electron:build": "ng build --base-href ./ && electron-builder build",
    "electron:start": "wait-on tcp:4200 && electron .",
    "electron:local": "npm run build && electron .",
    "electron:serve": "concurrently \"ng serve\" \"npm run electron:start\"",
    "cap:sync": "npx cap sync",
    "cap:build": "ng build && npx cap sync",
    "cap:open:ios": "npx cap open ios",
    "cap:run:ios": "npx cap run ios",
    "cap:init:ios": "npx cap add ios",
    "cap:update": "npx cap update"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.1.0",
    "@angular/common": "^19.1.0",
    "@angular/compiler": "^19.1.0",
    "@angular/core": "^19.1.0",
    "@angular/forms": "^19.1.0",
    "@angular/platform-browser": "^19.1.0",
    "@angular/platform-browser-dynamic": "^19.1.0",
    "@angular/router": "^19.1.0",
    "@capacitor/core": "^7.0.1",
    "@capacitor/filesystem": "^7.0.0",
    "@capacitor/ios": "^7.2.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "html2pdf.js": "^0.10.3",
    "jspdf": "^3.0.1",
    "marked": "^15.0.7",
    "mermaid": "^11.6.0",
    "ngx-electron": "^2.2.0",
    "ngx-markdown": "^19.1.0",
    "prismjs": "^1.29.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^11.1.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.1.8",
    "@angular/cli": "^19.1.8",
    "@angular/compiler-cli": "^19.1.0",
    "@capacitor/cli": "^7.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/mermaid": "^9.1.0",
    "@types/node": "^22.14.1",
    "@types/prismjs": "^1.26.5",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "jasmine-core": "~5.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.7.2"
  }
}
